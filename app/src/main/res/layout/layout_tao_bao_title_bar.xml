<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorAccent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:id="@+id/scan_img"
        android:background="@drawable/home_scan"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/scan_img"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/msg_img"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_search_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:drawableStart="@drawable/home_search"
                android:drawablePadding="4dp"
                android:text="职业男装"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/home_camera" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:layout_height="1dp"
            android:background="@color/white_smoke"/>
    </LinearLayout>

    <ImageView
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:id="@+id/msg_img"
        android:layout_marginEnd="16dp"
        android:background="@drawable/home_msg"
        android:layout_alignParentEnd="true"/>


</RelativeLayout>
